
@{
     ViewData["Title"] = "SubCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
        .imgEnlarge{
        transition:transform 0.25s ease;
    }

    .imgEnlarge:hover {
        -webkit-transform:scale(6.5); /* or some other value */
        transform:scale(6.5);
    }
</style>
<div style="width:100%">
<div class="container-fluid">
    <div class="row align-items-end pt-3 pb-2">
        <div class="col-md-6 order-2 order-md-1">
            <div class="dashboardInfo">
                <p>SubCategory Management</p>
            </div>
        </div>
        <div class="col-md-6 order-1 order-md-2">
            <div class="btn-group float-right">
                <button type="button" class="btn-Category dropdown-toggle btnAddFeature" id="btnAddSubCategory" onclick="AddSectionClick()"> <img src="~/images/add.png" alt="">	Add SubCategory</button>

                <div id="addSubCategory" class="dropdown-menu dropdown-menu-lg-right customDDmenu singleForm formFquipments">
                    <span class="closeSubCategory close"><img src="~/images/cancel.png" alt=""></span>
                    <form class="px-4 py-3">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Add Subcategory Details</h4>
                            </div>
                        </div>
                        <div class="row">
                            <input type="hidden" id="txtHiddenCategoryId" />
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="addCategoryId">Subcategory Name</label>
                                    <input type="text" class="form-control" id="txt_Subcategory" placeholder="Add Subcategory Name" onblur="CheckOnlyIsRequired(this,'SubCategory Name')">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="addCategoryId">Select a Category Name</label>
                                    <Select type="text" class="form-control txt_category" id="txt_category" name="txt_category" >
                                        @* <option value="0">--Select Category--</option> *@
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="addCategoryId">Image</label>
                                    <input type="file" class="form-control" id="cat_Img" onblur="CheckOnlyIsRequired(this,'Category Image')">
                                </div>
                            </div>
                            <input type="hidden" id="txtHiddenSubCatId" />
                        </div>
                        <div class="dropdown-divider mb-4"></div>
                        <div class="btn-groups">

                            <button type="button" class="btn btn-primary" data-toggle="modal" onclick="AddSubCategory()">Save</button>
                            <button type="button" class="btn btn-secondary closesubcategory">Cancel</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <div class="table-responsive tableTheme">

        <table id="tblSubCategory" class="table table-hover tblSubCategory table-md themeTable table-striped" style="width:70%">
            <thead>
                <tr>
                    <th class="dsplynone">Id</th>
                    <th>Name</th>
                    <th class="dsplynone"></th>
                    <th>Image</th>                       
                    <th>Is Active</th>                   
                </tr>
                <tr class="filters" style="text-transform:uppercase;">
                    <td class="dsplynone"></td>
                    <td class=""></td>
                    <td class="dsplynone"></td>
                    <td class=""></td>
                    <td class=""></td>
                   @*  <td class=""></td> *@
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>

</div>

<div class="modal fade alertModal" id="SubCategoryAddDone" tabindex="-1" role="dialog" aria-labelledby="CategoryAddTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="~/images/done.png" alt="">
                <h3>Thank you!</h3>
                @*<p>Category added successfully</p>*@
                <p id="txtSubCategoryCrudResultMsg"></p>
            </div>
        </div>
    </div> 
</div>


<div class="modal fade alertModal" id="SubCategoryDeleteModel" tabindex="-1" role="dialog" aria-labelledby="categoryAddTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="~/images/confirm.png" alt="">
                <p>Are you sure you want to delete<strong><span id="spnCatDeleteConfirmationText"></span></strong></p>
                <div class="btn-groups">
                    <input type="hidden" id="txtHiddenSubCatId" />
                    <button type="button" class="btn btn-primary" onclick="DeleteSubCategoryProcess(this)">Yes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</div>

</div>

@section Scripts {

    <script src="~/scripts/common.js"></script>
    @* <script src="~/scripts/Master/Category.js"></script>*@
    <script src="~/scripts/Master/SubCategory.js"></script>
}
